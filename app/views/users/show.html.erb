<h1>Welcome, <%= @user.username%>!</h1>
<h2><%= @user.location %></h2>

<% if @user.partner == nil %>
  <%=   %>
<% else %>
  <div>Looking for a partner now? <%= @user.partner %></div>
<% end %>
<div class="boxwrapper">
  <div class="box">
    <h3>Your List of Routes Here</h3>
    <% @routes.each do |route| %>
      <div>
        <div>Route Name: 
          <%= link_to route.name, route %>
        </div>
        <div>Climbing Style: 
          <%= route.style %>
        </div>
        <div>Grade: 
          <%= route.grade %>
        </div>
        <div>Created by: 
          <%= route.user.username%>
        </div>
        <div>
          <%= link_to "Leave a Review", route %>
        </div>
        <p>----------------------------------</p>
      </div>
    <% end %>
  </div>
  <div class="box">
    <h3>Your Reviews Here</h3>
    <% @reviews.each do |r| %>
      <div>
        <div>
          <h3>
            <%= r.stars %> Stars - <%= r.route.name %>
          </h3>
        </div>
        <div>Experience: 
          <%= r.experience %>
        </div>
        <br>
        <div>Recommended?
          <% if r.recommended == true %>
            Yes
          <% else %>
            No 
          <% end %>
        </div>
        <div>Created by: 
          <%= r.route.user.username%>
        </div>
        <p>----------------------------------</p>
      </div>
    <% end %>
  </div>
</div>
